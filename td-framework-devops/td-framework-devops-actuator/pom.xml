		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-security</artifactId>
		</dependency>
		<dependency>
			<groupId>com.tdenergys</groupId>
			<artifactId>td-framework-micro-fastservice</artifactId>
			<exclusions>
				<exclusion>
					<groupId>com.tdenergys</groupId>
					<artifactId>td-framework-service</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.tdenergys</groupId>
			<artifactId>td-framework-webjars-manager</artifactId>
		</dependency>
		<dependency>
			<groupId>com.tdenergys</groupId>
			<artifactId>td-framework-autoconfigure-rest</artifactId>
		</dependency>
		<dependency>
			<groupId>com.tdenergys</groupId>
			<artifactId>td-framework-autoconfigure-jpa-h2</artifactId>
		</dependency>
		<dependency>
			<groupId>com.tdenergys</groupId>
			<artifactId>td-framework-autoconfigure-mybatis</artifactId>
		</dependency>
		<dependency>
			<groupId>com.tdenergys</groupId>
			<artifactId>td-framework-autoconfigure-druid</artifactId>
		</dependency>
		<dependency>
			<groupId>com.tdenergys</groupId>
			<artifactId>td-framework-core</artifactId>
			<exclusions>
				<exclusion>
					<groupId>*</groupId>
					<artifactId>*</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.tdenergys</groupId>
			<artifactId>td-framework-devops-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-websocket</artifactId>
		</dependency>
		<dependency>
			<groupId>org.hyperic</groupId>
			<artifactId>sigar</artifactId>
			<version>1.6.5.132</version>
		</dependency>
		<dependency>
			<groupId>com.google.jimfs</groupId>
			<artifactId>jimfs</artifactId>
			<version>1.1</version>
		</dependency>
		<dependency>
			<groupId>com.tdenergys</groupId>
			<artifactId>td-framework-autoconfigure-tio</artifactId>
			<version>${project.version}</version>
		</dependency>
